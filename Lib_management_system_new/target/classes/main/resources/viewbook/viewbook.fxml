<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="1200.0" stylesheets="@../viewissuedbook/viewissuedbook.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="viewbook.viewbookcontroller">
    <children>
        <AnchorPane layoutY="20.0" prefHeight="98.0" prefWidth="1200.0" styleClass="an-background" stylesheets="@../viewissuedbook/viewissuedbook.css">
            <children>
                <Button layoutX="12.0" layoutY="35.0" mnemonicParsing="false" onAction="#handleadmin" prefHeight="26.0" prefWidth="54.0" styleClass="back-button" stylesheets="@../manage/managebook.css">
                    <graphic>
                        <ImageView fitHeight="22.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../manage/back.png" />
                            </image>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </ImageView>
                    </graphic>
                </Button>
                <TextField fx:id="searchField" layoutX="64.0" layoutY="30.0" onAction="#handleSearchAction" prefHeight="39.0" prefWidth="350.0" promptText="Search" style="-fx-background-radius: 30;" stylesheets="@viewbook.css">
                    <padding>
                        <Insets left="40.0" />
                    </padding>
                </TextField>
                <!-- Nút Search -->
                <Button fx:id="searchButton" layoutX="438.0" layoutY="30.0" onAction="#handleSearchAction" prefHeight="39.0" prefWidth="100.0" style="-fx-background-radius: 30;" text="Search" />
                <ImageView fitHeight="22.0" fitWidth="30.0" layoutX="75.0" layoutY="39.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../viewbook/search.png" />
                    </image>
                </ImageView>
            </children>
        </AnchorPane>

        <ListView fx:id="resultsListView" layoutX="56.0" layoutY="150.0" prefHeight="500.0" prefWidth="595.0" />

        <TextArea fx:id="bookDetailsTextArea" editable="false" layoutX="693.0" layoutY="150.0" prefHeight="500.0" prefWidth="477.0" style="-fx-background-radius: 10; -fx-border-color: lightgray; -fx-border-radius: 10;" wrapText="true" />

        <VBox alignment="CENTER" layoutX="40.0" layoutY="150.0" prefHeight="500.0" prefWidth="180.0" spacing="20" stylesheets="@viewbook.css" />

        <!-- Thêm các nút Previous và Next -->
        <Button fx:id="prevButton" layoutX="293.0" layoutY="660.0" mnemonicParsing="false" text="Previous" />
        <Button fx:id="nextButton" layoutX="360.0" layoutY="660.0" mnemonicParsing="false" text="Next" />

    </children>
</AnchorPane>